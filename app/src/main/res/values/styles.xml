<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main Layout style -->
    <style name="mainLayout">
        <item name="android:padding">@dimen/mainLayoutPadding</item>
    </style>

    <!-- Style of the title -->
    <style name="title">
        <item name="android:layout_margin">@dimen/titleLayoutMargin</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <!-- Style of the main Image -->
    <style name="mainImage">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/mainImageMargin</item>
    </style>s

    <!-- Style of the Question texts -->
    <style name="Question">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/questionTextSize</item>
        <item name="android:layout_marginLeft">@dimen/questionMargin</item>
        <item name="android:layout_marginRight">@dimen/questionMargin</item>
        <item name="android:layout_marginTop">@dimen/questionMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/questionMargin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for RadioButtons and CheckBoxes so they match at the layout -->
    <style name="CheckBoxes">
        <item name="android:textSize">@dimen/checkboxesTextSize</item>
        <item name="android:paddingLeft">@dimen/checkboxesPaddingLeft</item>
    </style>
    
    <!-- Style of the EditText layout (5th and 6th question) -->
    <style name="editText">
        <item name="android:layout_margin">@dimen/edittextMargin</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/edittextTextSize</item>
    </style>

    <!-- Style of the Submit Button -->
    <style name="Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:layout_margin">@dimen/buttonMargin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
